@model PreferencesViewModel

<div class="row">
    <div class="col s2">
        <form asp-controller="TripMap" asp-action="#" method="post" role="form">
            <input asp-for="Monuments" type="checkbox" id="test5" />
            <label asp-for="Monuments" for="test5"></label>

        </form>
        <form action="#">
            <div>
                <input asp-for="Monuments" class="filled-in" type="checkbox" />
                <label asp-for="Monuments"></label>
            </div>
            <div>
                <div my-checkbox-for="Monuments">Monuments</div>
                @*<input asp-for="Monuments" type="checkbox" class="filled-in" id="filled-in-box" checked="checked" />
                <label asp-for="Monuments" for="filled-in-box">Filled in</label>*@
            </div>
        </form>
    </div>
    <div class="col s10">
        <div id="map" style="min-height: 500px; min-height: 800px"></div>
    </div>
</div>  

@section Scripts {
<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
    function initialize() {
        var mapCanvas = document.getElementById('map');
        var mapOptions = {
            center: new google.maps.LatLng(44.5403, -78.5463),
            zoom: 8,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(mapCanvas, mapOptions)
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>
}