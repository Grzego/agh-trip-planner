@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager


<div class="container">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="col s12" style="max-width: 500px" role="form">
        <h4>Use a local account to log in</h4>
        <div class="row s6 brown lighten-1">
            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input asp-for="Email" class="validate">
                <label class="black-text" asp-for="Email">Email</label>
            </div>
        </div>
        <div class="row s6 brown lighten-1">
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <input asp-for="Password" class="validate">
                <label class="black-text" asp-for="Password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="checkbox">
                <input value="true" class="filled-in" asp-checkbox-for="RememberMe" />
            </div>
        </div>
        <div>
            <button class="waves-effect waves-light btn" type="submit">Log in</button>
        </div>
        <p>
            <a asp-action="Register">Register as a new user?</a>
        </p>
        <p>
            <a asp-action="ForgotPassword">Forgot your password?</a>
        </p>

        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
